{% extends '@layout/layout.twig' %}

{% block title %} Fill Database | Fill any database with fake data {% endblock %}

{% block content %}
    <div class="bg-light p-5 rounded mt-5 mb-5">
        <h1 class="text-center">Fill Database</h1>
    </div>

    <hr class="mb-5">

    <div class="row">
        <form>
            <div class="row">
                <div class="col-xs-12 col-sm-12 mb-12">
                    <select id="driver" class="form-select" aria-label="Select the driver">
                        <option disabled>Select the driver</option>
                        <option value="sqlite">Sqlite3</option>
                        <option selected value="mysql">MySql</option>
                    </select>
                </div>
            </div>

            <div class="row mt-5">

                <div class="col-xs-12 col-sm-3 mb-3">
                    <input id="host" value="{{ config.host|default('') }}" type="text" class="form-control" placeholder="Host" aria-label="Host">
                </div>

                <div class="col-xs-12 col-sm-3 mb-3">
                    <input id="database" value="{{ config.database|default('') }}" type="text" class="form-control" placeholder="Database" aria-label="Database">
                </div>

                <div class="col-xs-12 col-sm-3 mb-3">
                    <input id="username" value="{{ config.username|default('') }}" type="text" class="form-control" placeholder="User" aria-label="User">
                </div>

                <div class="col-xs-12 col-sm-3 mb-3">
                    <input id="password" value="{{ config.password|default('') }}" type="password" class="form-control" placeholder="Password" aria-label="Password">
                </div>

                <div class="d-grid gap-1">
                    <button id="connect" type="button" class="btn btn-primary  mb-3">Connect</button>
                </div>
            </div>
        </form>
    </div>

    <hr class="mt-5 mb-5">

    <div class="row">
        <form>
            <div class="row">
                <div class="col">
                    <select id="tables" class="form-select" aria-label="Select the tables">
                        <option selected>Select the tables</option>
                    </select>
                </div>

                <div class="d-grid gap-1 mt-4">
                    <button id="generate_query" disabled type="button" class="btn btn-primary  mb-3">Generate Query's</button>
                </div>
            </div>
        </form>
    </div>

    <hr class="mt-5 mb-4">

    <div class="row">
        <form>
            <div class="row">
                <div class="col">
                    <label for="query"></label>
                    <textarea disabled class="form-control" name="query" id="query" cols="30" rows="10"></textarea>
                </div>

                <div class="d-grid gap-1 mt-4">
                    <button disabled type="button" class="btn btn-primary  mb-3">Copy</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


{% block scripts %}
    <script type="application/javascript" src="{{ asset('js/Tables.js') }}"></script>
    <script type="application/javascript" src="{{ asset('js/Connection.js') }}"></script>
    <script type="application/javascript" src="{{ asset('js/Query.js') }}"></script>
{% endblock %}

