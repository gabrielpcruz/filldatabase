{
    "$schema": "vendor/infection/infection/resources/schema.json",
    "source": {
        "directories": [
            "src/Business/Data",
            "src/Business/Query",
            "src/Business/Table"
        ],
        "excludes": [
            "App.php",
            "helpers.php",
            "Console",
            "Entity",
            "Enum",
            "Exception",
            "Factory",
            "Handler",
            "Http",
            "Message",
            "Middleware",
            "Provider",
            "Repository",
            "Service",
            "Twig"
        ]
    },
    "tmpDir": "storage/tmp",
    "timeout": 60,
    "mutators": {
        "@default": true
    },
    "logs": {
        "html": "infection.html"
    },
    "testFramework": "codeception"
}
